@model CarService.Models.NwOd_private
@{
    ViewBag.Title = "Orders_open_pvt_update";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="page-title">
    <i class="icon-custom-left"></i>

    <h3 id="path">Ordrar &gt; Oavslutade Ordrar &gt; Privat &gt; Uppdatering</h3>
    <br />
</div>


<div class="col-lg-12">
    
    <!-- Form Start -->

    <form method="post" action="/Admin/Orders_open_pvt_update_update/@Model.order_no">
        <div id="" class="container-fluid " style="background-color:white">
            <div class="col-sm-12">

                <!-- 1st r -->

                <div class="row" id="frm_pad" style="padding-top:12px">
                    <div class="col-sm-4 form-group">
                        <input class="form-control input-lg focus" id="" value="@Model.LicensePlate" name="LicensePlate" placeholder="Registrerings Nummer" type="text" required>
                    </div>

                    <div class="col-sm-4 form-group">
                        <input class="form-control input-lg focus" id="" value="@Model.ChassiNumber" name="ChassiNumber" placeholder="Chassi Nummer" type="text" required>
                    </div>

                    <div class="form-group col-sm-4 ">
                        <select name="status_" class="form-control " id="" required>
                            <option value="@Model.status_">@Model.status_</option>
                            <option value="open">Oavslutade</option>
                            <option value="pending">Inkommande</option>
                            <option value="finished">Avslutade</option>
                        </select>
                    </div>
                </div>

                <!-- 2nd r -->

                <div class="row" id="frm_pad">
                    <div class="col-sm-4 form-group">
                        <input class="form-control input-lg focus" value="@Model.FirstName" id="" name="FirstName" placeholder="För Namn" type="text" required>
                    </div>

                    <div class="col-sm-4 form-group">
                        <input class="form-control input-lg focus" id="" value="@Model.LastName" name="LastName" placeholder="Efter Namn" type="text" required>
                    </div>
                    <div class="col-sm-4 form-group">
                        <input class="form-control input-lg focus" id="" value="@Model.order_no" name="order_no" placeholder="Order Nr" type="text" readonly>
                    </div>

                </div>

                <!-- 3rd r -->

                <div class="row" id="frm_pad">
                    <div class="col-sm-4 form-group">
                        <input class="form-control input-lg focus" id="" value="@Model.PhoneNumbaer" name="PhoneNumbaer" placeholder="Telefon" type="number" required>
                    </div>

                    <div class="col-sm-4 form-group">
                        <input class="form-control input-lg focus" id="" value="@Model.Mobile" name="Mobile" placeholder="Mobil" type="number" required>
                    </div>

                    <div class="col-sm-4 form-group">
                        <input class="form-control input-lg focus" id="" name="Email" value="@Model.Email" placeholder="E-post" type="email" required>
                    </div>

                </div>

                <!-- 4th r -->

                <div class="row" id="frm_pad">
                    <div class="col-sm-4 form-group">
                        <input class="form-control input-lg focus" id="" value="@Model.Address" name="Address" placeholder="Adress" type="text" required>
                    </div>

                    <div class="col-sm-4 form-group">
                        <input class="form-control input-lg focus" value="@Model.City" id="" name="City" placeholder="Ort" type="text" required>
                    </div>
                    <div class="form-group col-sm-4 ">
                        <select name="ChooseServiceCategory" class="form-control " id=""  required>
                            <option value="@Model.ChooseServiceCategory">@Model.ChooseServiceCategory</option>
                            <option value="A">A</option>
                            <option value="B">B</option>
                        </select>
                    </div>

                </div>

                <!-- 5th r -->

                <div class="row" id="frm_pad">
                    <div class="col-sm-4 form-group">
                        <input class="form-control input-lg focus" value="@Model.PostCode" id="" name="Postcode" placeholder="Postkod" type="text" required>
                    </div>

                    <div class="col-sm-4 form-group">
                        <input class="form-control input-lg focus" value="@Model.County" id="" name="County" placeholder="Län" type="text" required>
                    </div>
                  

                </div>

                <!-- 6th r -->
                <div class="row" id="frm_pad">
                    <div class="col-sm-12 form-group">
                        <textarea style="height:100px;" class="form-control input-lg focus" id="" name="ChosenService" placeholder="Valda Tjänster" rows="5"> @Model.ChosenService</textarea>
                    </div>
                </div>
                <!-- 7th r -->
                <div class="row" id="frm_pad" style="padding-bottom:12px;">
                    <div class="col-sm-12 form-group">
                        <textarea style="height:100px;" class="form-control input-lg focus" id="" name="Description" placeholder="Beskrivning" rows="5">@Model.Description</textarea>
                    </div>
                </div>
                <!-- 8th r -->

            </div>
        </div>
        <div class="row" id="frm_pad" style="padding-top:15px;">
            <div class="col-sm-12 form-group">
                <button class="btn btn-success btn-rounded pull-right" type="submit">Spara</button>
            </div>

        </div>
    </form>
</div>
