@{
    ViewBag.Title = "Home";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="page-title">
    <i class="icon-custom-left"></i>

    <h3 id="path">Ny Order &gt; Företag</h3>
    <br/>
</div>


<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
    <ul id="myTab" class="nav nav-tabs">
        <li class=""><a id="b1" href="/Admin/Index">Privat</a></li>
        <li class="active"><a id="b2" href="/Admin/NewOrd_Company" >Företag</a></li>

    </ul>
    <form method="post" action="/Admin/NwOd_Company">
        <!-- Form Start -->
        <div id="" class="container-fluid " style="background-color:white">
            <div class="col-sm-12">

                <!-- 1st r -->

                <div class="row" id="frm_pad" style="padding-top:12px">
                    <div class="col-sm-4 form-group">
                        <input class="form-control input-lg focus" id="" name="LicensePlate" placeholder="Reg Nr" type="text" required>
                    </div>

                    <div class="col-sm-4 form-group">
                        <input class="form-control input-lg focus" id="" name="ChassiNumber" placeholder="Chassi Nr" type="text" required>
                    </div>

                    <div class="form-group col-sm-4 ">
                        <select name="ServiceCategory" class="form-control " id="" required>
                            <option value=""> Tjänste Kategori</option>
                           @foreach(var x in Model)
                             {
                            <option value="@x.ChooseCategory">@x.ChooseCategory</option>
                           }
                        </select>
                    </div>

                </div>

                <!-- 2nd r -->

                <div class="row" id="frm_pad">
                  

                    <div class="col-sm-4 form-group">
                        <select name="Service" class="form-control " id="" required>
                            <option value="">Service Name</option>
                            @foreach (var x in Model)
                            {
                                <option value="@x.ServiceName">@x.ServiceName</option>
                            }
                        </select>
                    </div>

                    <div class="form-group col-sm-4 ">
                        <select name="ChooseCompany" class="form-control " id="" required>
                            <option value=""> Välja Företag</option>
                            @foreach (var x in Model)
                            {
                                <option value="@x.CompanyName">@x.CompanyName</option>
                            }
                        </select>
                    </div>
                </div>

                <!-- 3rd r -->

                <div class="row" id="frm_pad">
                    <div class="col-sm-4 form-group">
                        <input class="form-control input-lg focus" id="" name="ContactPerson" placeholder="Kontakt Person" type="text" required>
                    </div>

                   

                </div>

                <!-- 4th r -->

                <div class="row" id="frm_pad">
                    <div class="col-sm-12 form-group">
                        <textarea style="height:100px;" class="form-control input-lg focus" id="" name="ChosenService" placeholder="Valda Tjänster" rows="5"></textarea>
                    </div>
                </div>
                <!-- 5th r -->
                <div class="row" id="frm_pad" style="padding-bottom:12px;">
                    <div class="col-sm-12 form-group">
                        <textarea style="height:100px;" class="form-control input-lg focus" id="" name="Description" placeholder="Beskrivning" rows="5"></textarea>
                    </div>
                </div>
                <!-- 6th r -->

            </div>
        </div>
        <div class="row" id="frm_pad" style="padding-top:15px;">
            <div class="col-sm-12 form-group">

                <button class="btn btn-success btn-rounded pull-right" type="submit">Spara</button>
            </div>

        </div>
    </form>
</div>

