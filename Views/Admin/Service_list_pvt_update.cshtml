@model CarService.Models.Service_add_pakg_Pvt
@{
    ViewBag.Title = "Service_list_pvt_update";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="page-title">
    <i class="icon-custom-left"></i>

    <h3>Mina Tjänster &gt;Lägg Till Ny Tjänst &gt; Update &gt; Privat</h3>
    <br />
</div>


<div class="col-lg-12">
    
    <!-- Form Start -->
    <form action="/Admin/Service_list_pvt_update_update/@Model.Id" method="post">
        <div id="" class="container-fluid " style="background-color:white">
            <div class="col-sm-12">

                <!-- 1st r -->

                <div class="row" id="frm_pad" style="padding-top:12px">
                    <div class="form-group col-sm-4 ">
                        <select name="ChooseCategory" class="form-control " disabled id="">
                            <option>@Model.ChooseCategory</option>
                            <option value="A">A</option>
                            <option value="B">B</option>
                        </select>
                    </div>
                    

                    <div class="col-sm-4 form-group">
                        <input class="form-control input-lg focus" id="" value="@Model.ServiceName" name="ServiceName" placeholder="Tjänst" type="text" required>
                    </div>

                </div>

                <!-- 2nd r -->

                <div class="row" id="frm_pad" style="padding-bottom:12px;">
                    <div class="col-sm-4 form-group">
                        <input class="form-control input-lg focus" id="" value="@Model.PriceExVAT" name="PriceExVAT" placeholder="Pris Ex VAT" type="text" required>
                    </div>

                    <div class="col-sm-4 form-group">
                        <input class="form-control input-lg focus" id="" name="PriceIncVAT" value="@Model.PriceIncVAT" placeholder="Pris Inc VAT" type="text" required>
                    </div>

                </div>

                <!-- 3rd r -->




            </div>
        </div>
        <div class="row" id="frm_pad" style="padding-top:15px;">
            <div class="col-sm-12 form-group">
                <button class="btn btn-success btn-rounded pull-right" type="submit"> Spara</button>
            </div>

        </div>
    </form>
</div>

