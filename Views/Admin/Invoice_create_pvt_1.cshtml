@{
    ViewBag.Title = "Invoice_create_pvt_1";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="page-title">
    <i class="icon-custom-left"></i>

    <h3>Faktura &gt;Skapa ny Faktura  &gt; PRIVAT</h3>
    <br />
</div>

<div class="col-lg-12">
    <ul id="myTab" class="nav nav-tabs">
        <li class="active"><a id="b1" href="/Admin/Invoice_create_pvt_1">Privat</a></li>
        <li class=""><a id="b2" href="/Admin/Invoice_create_cmpy_1">Företag</a></li>
    </ul>
    <div class="container-fluid  " style="background-color: white; overflow-y: auto; overflow-x: auto; height: 500px;">

        <!-- Form Start -->
        <form action="/Admin/Invoice_create_pvt_save_1" method="post">
            <div id="" class="container-fluid " style="background-color:white">
                <div class="col-sm-12">

                    <!-- 1st r -->

                    <div class="row" id="frm_pad" style="padding-top:12px">
                        <div class="col-sm-4 form-group">
                            <input class="form-control input-lg focus" id=""  name="Order_no" placeholder="Order Nummer" type="text" />
                        </div>

                        <div class="col-sm-4 form-group">
                            <input class="form-control input-lg focus" id=""  name="username" placeholder="Anvandarnamn" type="text">
                        </div>

                        <div class="col-sm-4 form-group">
                            <input class="form-control input-lg focus" id="" name="OCR" placeholder="OCR" type="text" required>
                        </div>


                    </div>

                    <!-- 2nd r -->

                    <div class="row" id="frm_pad">
                        <div class="col-sm-4 form-group">
                            <input class="form-control input-lg focus" id="" name="InvoiceDate" placeholder="Faktura Datum" type="date" required>
                        </div>

                        <div class="col-sm-4 form-group">
                            <input class="form-control input-lg focus" id="" name="Exp_Date" placeholder="Förfallo Datum" type="date" required>
                        </div>

                        <div class="col-sm-4 form-group">
                            <input class="form-control input-lg focus" id="" name="OurReference" placeholder="Vår Referens" type="text" required>
                        </div>

                    </div>

                    <!-- 3rd r -->

                    <div class="row" id="frm_pad" style="padding-bottom:12px;">
                        <div class="col-sm-4 form-group">
                            <input class="form-control input-lg focus" id="" name="IntrestRate" placeholder="Dröjsmålsränta" type="text" required>
                        </div>

                        <div class="col-sm-4 form-group">
                            <input class="form-control input-lg focus" id="" name="RemainderFee" placeholder="Aterstoden Avgift" type="text" required>
                        </div>

                    </div>




                </div>
            </div>
            <div class="row" id="frm_pad" style="padding-top:15px;">
                <div class="col-sm-12 form-group">
                    <button class="btn btn-success btn-rounded pull-right" type="submit"> Skapa Ny Faktura</button>
                </div>

            </div>
        </form>
    </div>
</div>
