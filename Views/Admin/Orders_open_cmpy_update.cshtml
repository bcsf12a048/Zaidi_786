@model CarService.Models.NwOd_company
@{
    ViewBag.Title = "Orders_open_cmpy_update";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="page-title">
    <i class="icon-custom-left"></i>

    <h3 id="path">Ordrar &gt; Oavslutade Ordrar &gt; Företag &gt; Update</h3>
    <br />
</div>


<div class="col-lg-12">

    <!-- Form Start -->
    <form method="post" action="/Admin/Orders_open_cmpy_update_update/@Model.order_no">
        <!-- Form Start -->
        <div id="" class="container-fluid " style="background-color:white">
            <div class="col-sm-12">

                <!-- 1st r -->

                <div class="row" id="frm_pad" style="padding-top:12px">
                    <div class="col-sm-4 form-group">
                        <input class="form-control input-lg focus" id="" value="@Model.LicensePlate" name="Licenseplate" placeholder="Reg Nr" type="text" required>
                    </div>

                    <div class="col-sm-4 form-group">
                        <input class="form-control input-lg focus" id="" value="@Model.ChassiNumber" name="ChassiNumber" placeholder="Chassi Nr" type="text" required>
                    </div>

                    <div class="form-group col-sm-4 ">
                        <select name="ServiceCategory" class="form-control " id="" required>
                            <option> @Model.ServiceCategory</option>
                            <option value="A">A</option>
                            <option value="B">B</option>
                        </select>
                    </div>

                </div>

                <!-- 2nd r -->

                <div class="row" id="frm_pad">
                    <div class="form-group col-sm-4 ">
                        <select name="ChooseCompany" class="form-control " id="" required>
                            <option>@Model.ChooseCompany</option>
                            <option value="A">A</option>
                            <option value="B">B</option>
                        </select>
                    </div>

                    <div class="col-sm-4 form-group">
                        <input class="form-control input-lg focus" id="" value="@Model.Service" name="Service" placeholder="Service" type="text" required>
                    </div>

                    <div class="form-group col-sm-4 ">
                        <select name="Status" class="form-control " id="" required>
                            <option>@Model.Status</option>
                            <option value="open">Oavslutade</option>
                            <option value="pending">Inkommande</option>
                            <option value="finished">Avslutade</option>
                        </select>
                    </div>
                </div>

                <!-- 3rd r -->

                <div class="row" id="frm_pad">
                    <div class="col-sm-4 form-group">
                        <input class="form-control input-lg focus" id="" value="@Model.ContactPerson" name="ContactPerson" placeholder="Kontakt Person" type="text" required>
                    </div>

                    <div class="col-sm-4 form-group">
                        <input class="form-control input-lg focus" id="" value="@Model.ChosenService" name="ChosenService" placeholder="Valda Tjänster" type="text" required>
                    </div>

                    <div class="col-sm-4 form-group">
                        <input class="form-control input-lg focus" id="" value="@Model.order_no" name="order_no" placeholder="Order Nummer" type="text" readonly>
                    </div>
                </div>

                <!-- 4th r -->

                <div class="row" id="frm_pad">
                    <div class="col-sm-12 form-group">
                        <textarea style="height:100px;" class="form-control input-lg focus" id="" name="ChosenService" placeholder="Valda Tjänster" rows="5">@Model.ChosenService</textarea>
                    </div>
                </div>
                <!-- 5th r -->
                <div class="row" id="frm_pad" style="padding-bottom:12px;">
                    <div class="col-sm-12 form-group">
                        <textarea style="height:100px;" class="form-control input-lg focus" id="" name="Description" placeholder="Beskrivning" rows="5">@Model.Description</textarea>
                    </div>
                </div>
                <!-- 6th r -->

            </div>
        </div>
        <div class="row" id="frm_pad" style="padding-top:15px;">
            <div class="col-sm-12 form-group">

                <button class="btn btn-success btn-rounded pull-right" type="submit"> Spara</button>
            </div>

        </div>
    </form></div>
