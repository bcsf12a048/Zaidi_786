@model CarService.Models.client_nwad_cmpy
@{
    ViewBag.Title = "Client_list_cmpy_update";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="page-title">
    <i class="icon-custom-left"></i>

    <h3>Kunder &gt;Lägg till ny kund &gt; Update &gt; Företag</h3>
    <br />
</div>
<div class="col-lg-12">
    
    <!-- Form Start -->
    <form action="/Admin/Client_list_cmpy_update_update/@Model.Id" method="post">
        <div id="" class="container-fluid " style="background-color:white">
            <div class="col-sm-12">

                <!-- 1st r -->

                <div class="row" id="frm_pad" style="padding-top:12px">
                    <div class="col-sm-4 form-group">
                        <input class="form-control input-lg focus" id="" value="@Model.OrganisationNumber" name="OrganisationNumber" placeholder="Organisations Nummerr" type="text">
                    </div>

                    <div class="col-sm-4 form-group">
                        <input class="form-control input-lg focus" id="" value="@Model.CompanyNumber" name="CompanyNumber" placeholder="Företag Nummer" type="text">
                    </div>

                    <div class="col-sm-4 form-group">
                        <input class="form-control input-lg focus" id="" value="@Model.Kundnummer" name="Kundnummer" placeholder="Kundnummer" type="text">
                    </div>
                </div>

                <!-- 2nd r -->

                <div class="row" id="frm_pad">
                    <div class="col-sm-4 form-group">
                        <input class="form-control input-lg focus" id="" value="@Model.ContactPerson" name="ContactPerson" placeholder="Kontakt Person" type="text">
                    </div>

                    <div class="col-sm-4 form-group">
                        <input class="form-control input-lg focus" id="" value="@Model.CompanyPhoneNumber" name="PhoneContactPerson" placeholder="Telefon Kontakt Person" type="text">
                    </div>

                    <div class="col-sm-4 form-group">
                        <input class="form-control input-lg focus" id="" value="@Model.EmailContactPerson" name="EmailContactPerson" placeholder="E-post Kontakt Person" type="text">
                    </div>

                </div>
                <!-- 3rd r -->

                <div class="row" id="frm_pad">
                    <div class="col-sm-4 form-group">
                        <input class="form-control input-lg focus" id="" value="@Model.CompanyPhoneNumber" name="CompanyPhoneNumber" placeholder="Växel Telefon" type="text">
                    </div>

                    <div class="col-sm-4 form-group">
                        <input class="form-control input-lg focus" id="" name="CompanyFaxNumber" value="@Model.CompanyFaxNumber" placeholder="Växel Faxnummer" type="text">
                    </div>

                    <div class="col-sm-4 form-group">
                        <input class="form-control input-lg focus" id="" value="@Model.CompanyEmail" name="CompanyEmail" placeholder="E-post" type="email">
                    </div>

                </div>

                <!-- 4th r -->

                <div class="row" id="frm_pad">
                    <div class="col-sm-4 form-group">
                        <input class="form-control input-lg focus" id="" value="@Model.StreetAddress" name="StreetAddress" placeholder="Adress" type="text">
                    </div>

                    <div class="col-sm-4 form-group">
                        <input class="form-control input-lg focus" id="" value="@Model.Postcode" name="Postcode" placeholder="Postkod" type="text">
                    </div>

                    <div class="col-sm-4 form-group">
                        <input class="form-control input-lg focus" id="" value="@Model.City" name="City" placeholder="Ort" type="text">
                    </div>

                </div>

                <!-- 5th r -->

                <div class="row" id="frm_pad" style="padding-bottom:12px;">
                    <div class="col-sm-4 form-group">
                        <input class="form-control input-lg focus" id="" value="@Model.County" name="County" placeholder="Län" type="text">
                    </div>
                    <div class="col-sm-4 form-group">
                        <input class="form-control input-lg focus" id="" value="@Model.companyname" name="companyname" type="text" placeholder="Företags Namn" required>
                    </div>

                </div>
                <!-- 6th r -->

            </div>
        </div>
        <div class="row" id="frm_pad" style="padding-top:15px;">
            <div class="col-sm-12 form-group">
                <button class="btn btn-success btn-rounded pull-right" type="submit">Spara</button>
            </div>

        </div>
    </form>
</div>