@model CarService.Models.Invoice_crt_cmpy
@{
    ViewBag.Title = "Invoice_my_cmpy_update";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="page-title">
    <i class="icon-custom-left"></i>

    <h3>Faktura &gt;Skapa Ny Faktura  &gt; Update  &gt; Företag</h3>
    <br />
</div>

<div class="col-lg-12">
    
    <!-- Form Start -->
    <form action="/Admin/Invoice_my_cmpy_update_update/@Model.Invoice_no" method="post">
        <div id="" class="container-fluid " style="background-color:white">
            <div class="col-sm-12">



                <div class="row" id="frm_pad" style="padding-top:12px">
                    <div class="col-sm-4 form-group">
                        <input class="form-control input-lg focus" id="" value="@Model.order_no" name="order_no" placeholder="Order Nummer" type="text" readonly>
                    </div>

                    <div class="col-sm-4 form-group">
                        <input class="form-control input-lg focus" id="" value="@Model.username" name="username" placeholder="AnvandarNamn" type="text" readonly>
                    </div>

                    <div class="form-group col-sm-4 ">
                        <select name="status" class="form-control " id="" required>
                            <option value="@Model.status">@Model.status</option>
                            
                            <option value="betald">Betald</option>
                            <option value="obetald">Obetald</option>
                        </select>
</div>

                </div>


                <!-- 1st r -->

                <div class="row" id="frm_pad" style="padding-top:12px">
                    <div class="col-sm-4 form-group">
                        <input class="form-control input-lg focus" id="" value="@Model.CompanyNumber" name="CompanyNumber" placeholder="Företag Nummer" type="text" required>
                    </div>

                    <div class="col-sm-4 form-group">
                        <input class="form-control input-lg focus" id="" value="@Model.OrdersForm" name="OrdersForm" placeholder="Ordrar F.o.m" type="text" required>
                    </div>

                    <div class="col-sm-4 form-group">
                        <input class="form-control input-lg focus" id="" value="@Model.Orderto" name="Orderto" placeholder="Ordrar T.o.m" type="text" required>
                    </div>


                </div>

                <!-- 2nd r -->

                <div class="row" id="frm_pad">
                    <div class="col-sm-4 form-group">
                        <input class="form-control input-lg focus" id="" value="@Model.Invoice_no" name="Invoice_no" placeholder="Faktura Nummer" type="text" readonly>
                    </div>

                    <div class="col-sm-4 form-group">
                        <input class="form-control input-lg focus" id="" value="@Model.InvoiceDate" name="InvoiceDate" placeholder="Faktura Datum" type="text" required>
                    </div>

                    <div class="col-sm-4 form-group">
                        <input class="form-control input-lg focus" id="" value="@Model.OCR" name="OCR" placeholder="OCR" type="text" required>
                    </div>

                </div>

                <!-- 3rd r -->

                <div class="row" id="frm_pad" style="padding-bottom:12px;">
                    <div class="col-sm-4 form-group">
                        <input class="form-control input-lg focus" id="" value="@Model.ExpDate" name="ExpDate" placeholder="Förfallo Datum" type="text" required>
                    </div>

                    <div class="col-sm-4 form-group">
                        <input class="form-control input-lg focus" id="" value="@Model.OurReference" name="OurReference" placeholder="Vår Referens" type="text" required>
                    </div>

                    <div class="col-sm-4 form-group">
                        <input class="form-control input-lg focus" id="" value="@Model.ContactPerson" name="ContactPerson" placeholder="Kontakt Person" type="text" required>
                    </div>

                </div>

                <!-- 3rd r -->

                <div class="row" id="frm_pad" style="padding-bottom:12px;">
                    <div class="col-sm-4 form-group">
                        <input class="form-control input-lg focus" id="" value="@Model.Interest" name="Interest" placeholder="Dröjsmålsränta" type="text" required>
                    </div>

                    <div class="col-sm-4 form-group">
                        <input class="form-control input-lg focus" id="" value="@Model.Reminderfee" name="Reminderfee" placeholder="Påminnelseavgift" type="text" required>
                    </div>

                </div>



            </div>
        </div>
        <div class="row" id="frm_pad" style="padding-top:15px;">
            <div class="col-sm-12 form-group">
                <button class="btn btn-success btn-rounded pull-right" type="submit"> Skapa Ny Faktura</button>
            </div>

        </div>
    </form>
</div>

