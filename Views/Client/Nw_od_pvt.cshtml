@{
    ViewBag.Title = "Client_nwOrder";
    Layout = "~/Views/Shared/_LayoutClientPrivate.cshtml";
}

<div class="">
   
    <h3 id="path">NY ORDER &gt; PRIVAT</h3>
    <br />
</div>


<div class="col-lg-12">
    
    <!-- Form Start -->

    <form method="post" action="/Client/NwOd_private_save">
        <div id="" class="container-fluid " style="background-color:white">
            <div class="col-sm-12">

                <!-- 1st r -->

                <div class="row" id="frm_pad" style="padding-top:12px">
                    <div class="col-sm-4 form-group">
                        <input class="form-control input-lg focus" id="" name="LicensePlate" placeholder="Registrerings Nummer" type="text" required>
                    </div>

                    <div class="col-sm-4 form-group">
                        <input class="form-control input-lg focus" id="" name="ChassiNumber" placeholder="Chassi Nummer" type="text" required>
                    </div>


                </div>

                <!-- 2nd r -->

                <div class="row" id="frm_pad">
                    <div class="col-sm-4 form-group">
                        <input class="form-control input-lg focus" id="" name="FirstName" placeholder="Förnamn" type="text" required>
                    </div>

                    <div class="col-sm-4 form-group">
                        <input class="form-control input-lg focus" id="" name="LastName" placeholder="Efternamn" type="text" required>
                    </div>

                </div>

                <!-- 3rd r -->

                <div class="row" id="frm_pad">
                    <div class="col-sm-4 form-group">
                        <input class="form-control input-lg focus" id="" name="PhoneNumbaer" placeholder="Telefon" type="text" required>
                    </div>

                    <div class="col-sm-4 form-group">
                        <input class="form-control input-lg focus" id="" name="Mobile" placeholder="Mobil" type="number" required>
                    </div>

                    <div class="col-sm-4 form-group">
                        <input class="form-control input-lg focus" id="" name="Email" placeholder="E-post" type="email" required>
                    </div>

                </div>

                <!-- 4th r -->

                <div class="row" id="frm_pad">
                    <div class="col-sm-4 form-group">
                        <input class="form-control input-lg focus" id="" name="Address" placeholder="Adress" type="text" required>
                    </div>

                    <div class="col-sm-4 form-group">
                        <input class="form-control input-lg focus" id="" name="City" placeholder="Ort" type="text" required>
                    </div>
                    <div class="form-group col-sm-4 ">
                        <select name="ChooseServiceCategory" class="form-control " id="" required>
                            <option>Service Kategori</option>
                            @foreach (var x in Model)
                            {
                                <option value="@x.ChooseCategory">@x.ChooseCategory</option>
                            }
                        </select>
                    </div>

                </div>

                <!-- 5th r -->

                <div class="row" id="frm_pad">
                    <div class="col-sm-4 form-group">
                        <input class="form-control input-lg focus" id="" name="Postcode" placeholder="Postkod" type="text" required>
                    </div>

                    <div class="col-sm-4 form-group">
                        <input class="form-control input-lg focus" id="" name="County" placeholder="Län" type="text" required>
                    </div>
                    <div class="form-group col-sm-4 ">
                        <select name="Service" class="form-control" id="" required>
                            <option>Service</option>
                            @foreach (var x in Model)
                            {
                                <option value="@x.ServiceName">@x.ServiceName</option>
                            }
                        </select>
                    </div>

                </div>

                <!-- 6th r -->
                <div class="row" id="frm_pad">
                    <div class="col-sm-12 form-group">
                        <textarea style="height:100px;" class="form-control input-lg focus" id="" name="ChosenService" placeholder="Valda Tjänster" rows="5"></textarea>
                    </div>
                </div>
                <!-- 7th r -->
                <div class="row" id="frm_pad" style="padding-bottom:12px;">
                    <div class="col-sm-12 form-group">
                        <textarea style="height:100px;" class="form-control input-lg focus" id="" name="Description" placeholder="Noteringar" rows="5"></textarea>
                    </div>
                </div>
                <!-- 8th r -->

            </div>
        </div>
        <div class="row" id="frm_pad" style="padding-top:15px;">
            <div class="col-sm-12 form-group">
                <button class="btn btn-success btn-rounded pull-right" type="submit"> Spara</button>
            </div>

        </div>
    </form>
</div>



